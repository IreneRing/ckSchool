<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="ck.dao.AchievementsDao">
	
	<!-- 建立sql查询结果字段与实体属性的映射关系 -->
	<resultMap id="AchievementsMap" type="ck.bean.AchievementsEx">
		<result column="aid" property="aid" />
		<result column="aname" property="aname" />
		<result column="amessage" property="amessage" />
		<result column="adate" property="adate" />
		<result column="apic" property="apic" />
		<result column="uid" property="uid" />
		<result column="tid" property="tid" />
		<result column="username" property="username" />
		<result column="tname" property="tname" />
	</resultMap>
	<!-- 查找所有 -->
	<select id="findAllAchievements" resultMap="AchievementsMap">
		SELECT tb_achievements.*,tb_user.username,tb_teacher.tname FROM tb_achievements,tb_teacher,tb_user WHERE tb_achievements.uid=tb_user.uid AND tb_teacher.tid=tb_achievements.tid
	</select>
	<!-- 查找数目4 -->
	<select id="findInAchievements" resultMap="AchievementsMap">
		SELECT tb_achievements.*,tb_user.username,tb_teacher.tname FROM tb_achievements,tb_teacher,tb_user WHERE tb_achievements.uid=tb_user.uid AND tb_teacher.tid=tb_achievements.tid LIMIT 0,4
	</select>
</mapper>